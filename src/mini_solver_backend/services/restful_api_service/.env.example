# RESTful API Service - Environment Variables Example

# Flask
FLASK_ENV=development
PORT=8000

# JWT configuration
JWT_SECRET=change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_TTL_MIN=60
REFRESH_TOKEN_TTL_DAYS=7

# Firestore / Google Cloud credentials
# Provide either FIREBASE_SERVICE_ACCOUNT_FILE or GOOGLE_APPLICATION_CREDENTIALS
FIREBASE_SERVICE_ACCOUNT_FILE=/absolute/path/to/serviceAccountKey.json
GOOGLE_APPLICATION_CREDENTIALS=
FIREBASE_PROJECT_ID=your-project-id

# Optional logging
LOG_LEVEL=INFO

# File storage
# Prefer local during dev; if set, LocalFileStorageModule will be used
LOCAL_STORAGE_DIR=/absolute/path/to/local_storage
# If using Firebase Storage instead
FIREBASE_STORAGE_BUCKET=your-bucket-name

# Message queue
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
REQUEST_QUEUE=solve_requests
REPLY_QUEUE=solve_results
SOLVE_TIMEOUT_SEC=60
